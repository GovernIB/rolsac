<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<form-validation>

    <formset>


        <form name="normativaForm">
            <field property="textoFecha" depends="date">
                <arg0 key="normativa.fecha" />
                <var>
                    <var-name>datePatternStrict</var-name>
                    <var-value>dd/MM/yyyy</var-value>
                </var>
            </field>
            <field property="textoFechaBoletin" depends="date">
                <arg0 key="normativa.fechaBoletin" />
                <var>
                    <var-name>datePatternStrict</var-name>
                    <var-value>dd/MM/yyyy</var-value>
                </var>
            </field>
            <field property="validacion" depends="required">
                <arg0 key="normativa.validacion" />
            </field>
            <field property="traducciones[0].titulo" depends="required">
                <arg0 key="normativa.titulo" />
            </field>
            <field indexedListProperty="traducciones" property="observaciones" depends="maxlength">
                <arg0 key="normativa.observaciones" />
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>4000</var-value>
                </var>
            </field>
        </form>

    </formset>
</form-validation>
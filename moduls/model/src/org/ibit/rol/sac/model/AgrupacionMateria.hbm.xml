<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping package="org.ibit.rol.sac.model">
    <class name="org.ibit.rol.sac.model.AgrupacionMateria" table="RSC_AGRMAT">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" column="AGM_CODI">
            <generator class="sequence">
                <param name="sequence">RSC_SEQ_ALL</param>
            </generator>
        </id>

        <property name="codigoEstandar" length="256" column="AGM_CODEST"/>
		
		<list name="materiasAgrupacionM" cascade="all" inverse="true" lazy="true">
            <cache usage="read-write"/>
            <key column="MAG_CODAGM" foreign-key="RSC_MAGAGM_FK"/>
            <index column="MAG_ORDEN"/>
            <one-to-many class="org.ibit.rol.sac.model.MateriaAgrupacionM"/>
        </list>

        <many-to-one name="seccion" column="AGM_CODSEC" foreign-key="RSC_AGMSEC_FK"/>

        <map name="traducciones" cascade="all" table="RSC_TRAAGM">
            <cache usage="read-write"/>
            <key column="TAM_CODAGM" foreign-key="RSC_TAMAGM_FK"/>
            <index column="TAM_CODIDI" type="string" length="2"/>
            <composite-element class="org.ibit.rol.sac.model.TraduccionAgrupacionM">
                <property name="nombre" length="256" column="TAM_NOMBRE"/>
            </composite-element>
        </map>
    </class>
    <query name="agrupacionm.byname">
        <![CDATA[select agr from AgrupacionMateria as agr, trad in agr.traducciones where trad.nombre = :nombre]]>
    </query>
</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping package="org.ibit.rol.sac.model">
    <class name="org.ibit.rol.sac.model.PublicoObjetivo" table="RSC_PUBOBJ">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" column="POB_CODI">
            <generator class="sequence">
                <param name="sequence">RSC_SEQ_ALL</param>
            </generator>
        </id>

        <property name="codigoEstandar" length="128" column="POB_CODEST"/>
 		<property name="orden" column="POB_ORDEN"/>
 		
 		<set name="agrupaciones" inverse="true" cascade="all" lazy="true" order-by="AGH_CODEST">
            <cache usage="read-write"/>
            <key column="AGH_CODPOB" foreign-key="RSC_AGHPOB_FK"/>
            <one-to-many class="org.ibit.rol.sac.model.AgrupacionHechoVital"/>
        </set>

        <map name="traducciones" cascade="all" table="RSC_TRAPOB">
            <cache usage="read-write"/>
            <key column="TRP_CODPOB" foreign-key="RSC_TRPPOB_FK"/>
            <index column="TRP_CODIDI" type="string" length="2"/>
            <composite-element class="org.ibit.rol.sac.model.TraduccionPublicoObjetivo">
                <property name="titulo" length="256" column="TRP_TITULO"/>
                <property name="descripcion" length="4000" column="TRP_DESCRI"/>
                <property name="palabrasclave" length="4000" column="TRP_PALCLA"/>
            </composite-element>
        </map>
    </class>
    <query name="publico.byname">
        <![CDATA[select pub from PublicoObjetivo as pub, trad in pub.traducciones where trad.titulo = :titulo]]>
    </query>
</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

    <class name="org.ibit.rol.sac.model.Comentario" table="RSC_COMENT" discriminator-value="comentario">

        <cache usage="read-write"/>

        <id name="id" unsaved-value="null" column="COM_CODI">
            <generator class="sequence">
                <param name="sequence">RSC_SEQ_COM</param>
            </generator>
        </id>

        <discriminator column="COM_TYPE" type="string" length="64"/>

        <property name="titulo" length="256" column="COM_TITULO"/>
        <property name="motivo" length="64" column="COM_MOTIVO" not-null="true"/>
        <property name="fecha" column="COM_FECHA"/>
        <property name="contenido" length="4000" column="COM_CONTEN"/>
		<property name="subsanado" column="COM_SUBSAN" />

        <property name="autor" length="256" column="COM_AUTOR"/>
        <many-to-one name="usuario" cascade="none" outer-join="false" column="COM_CODUSU" foreign-key="RSC_COMUSU_FK"/>

        <subclass name="org.ibit.rol.sac.model.ComentarioProcedimiento" discriminator-value="comentarioProcedimiento">
            <many-to-one name="procedimiento" cascade="none" outer-join="false" column="COM_CODPRO" foreign-key="RSC_COMPRO_FK"/>
        </subclass>

        <subclass name="org.ibit.rol.sac.model.ComentarioFicha" discriminator-value="comentarioFicha">
            <many-to-one name="ficha" cascade="none" outer-join="false" column="COM_CODFIC" foreign-key="RSC_COMFIC_FK"/>
        </subclass>

    </class>

</hibernate-mapping>
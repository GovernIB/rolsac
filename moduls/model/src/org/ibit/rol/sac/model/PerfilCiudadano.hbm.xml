<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class name="org.ibit.rol.sac.model.PerfilCiudadano" table="RSC_PERCIU">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" column="PEC_CODI">
            <generator class="sequence">
                <param name="sequence">RSC_SEQ_ALL</param>
            </generator>
        </id>

        <property name="codigoEstandard" length="10" column="PEC_CODEST"/>
        <property name="pathIconografia" length="256" column="PEC_PATICO"/>

        <set name="iconosFamilia" cascade="all" inverse="true" lazy="true">
            <key column="ICF_CODPEC" foreign-key="RSC_ICFPEC_FK"/>
            <one-to-many class="org.ibit.rol.sac.model.IconoFamilia" />
        </set>

        <set name="iconosMateria" cascade="all" inverse="true" lazy="true">
            <key column="ICM_CODPEC" foreign-key="RSC_ICMPEC_FK"/>
            <one-to-many class="org.ibit.rol.sac.model.IconoMateria"/>
        </set>

        <map name="traducciones" cascade="all" table="RSC_TRAPEC">
            <cache usage="read-write"/>
            <key column="TPE_CODPEC" foreign-key="RSC_TPEPEC_FK"/>
            <index column="TPE_CODIDI" type="string" length="2"/>
            <composite-element class="org.ibit.rol.sac.model.TraduccionPerfilCiudadano">
                <property name="nombre" length="256" column="TPE_NOMBRE"/>
                <property name="descripcion" length="4000" column="TPE_DESCRI"/>
            </composite-element>
        </map>
    </class>
</hibernate-mapping>
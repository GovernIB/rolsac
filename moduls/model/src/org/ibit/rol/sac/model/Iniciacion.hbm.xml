<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class name="org.ibit.rol.sac.model.Iniciacion" table="RSC_INICI">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" column="INI_CODI">
            <generator class="sequence">
                <param name="sequence">RSC_SEQ_ALL</param>
            </generator>
        </id>

        <property name="codigoEstandar" length="256" column="INI_CODEST"/>

 	    <set name="procedimientosLocales" cascade="none" inverse="true" lazy="true">
            <key column="PRO_CODINI" foreign-key="RSC_PROINI_FK"/>
            <one-to-many class="org.ibit.rol.sac.model.ProcedimientoLocal"/>
        </set>

        <map name="traducciones" cascade="all" table="RSC_TRAINI">
            <cache usage="read-write"/>
            <key column="TIN_CODINI" foreign-key="RSC_TRAINI_FK"/>
            <index column="TIN_CODIDI" type="string" length="2"/>
            <composite-element class="org.ibit.rol.sac.model.TraduccionIniciacion">
                <property name="nombre" length="256" column="TIN_NOMBRE"/>
                <property name="descripcion" length="4000" column="TIN_DESCRI"/>
            </composite-element>
        </map>

    </class>
</hibernate-mapping>
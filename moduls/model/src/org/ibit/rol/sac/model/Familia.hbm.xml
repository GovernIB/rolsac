<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class name="org.ibit.rol.sac.model.Familia" table="RSC_FAMILI">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" column="FAM_CODI">
            <generator class="sequence">
                <param name="sequence">RSC_SEQ_ALL</param>
            </generator>
        </id>

        <set name="procedimientosLocales" cascade="none" inverse="true" lazy="true">
            <key column="PRO_CODFAM" foreign-key="RSC_PROFAM_FK"/>
            <one-to-many class="org.ibit.rol.sac.model.ProcedimientoLocal"/>
        </set>

        <set name="iconos" cascade="all" inverse="true" lazy="true">
            <cache usage="read-write"/>
            <key column="ICF_CODFAM" foreign-key="RSC_ICFFAM_FK"/>
            <one-to-many class="org.ibit.rol.sac.model.IconoFamilia"/>
        </set>

        <map name="traducciones" cascade="all" table="RSC_TRAFAM">
            <cache usage="read-write"/>
            <key column="TFA_CODFAM" foreign-key="RSC_TFAFAM_FK"/>
            <index column="TFA_CODIDI" type="string" length="2"/>
            <composite-element class="org.ibit.rol.sac.model.TraduccionFamilia">
                <property name="nombre" length="256" column="TFA_NOMBRE"/>
                <property name="descripcion" length="4000" column="TFA_DESCRI"/>
            </composite-element>
        </map>

    </class>
</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping package="org.ibit.rol.sac.model">
    <class name="org.ibit.rol.sac.model.AgrupacionHechoVital" table="RSC_AGHEVI">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" column="AGH_CODI">
            <generator class="sequence">
                <param name="sequence">RSC_SEQ_ALL</param>
            </generator>
        </id>

        <property name="codigoEstandar" length="128" column="AGH_CODEST"/>
		
		<list name="hechosVitalesAgrupacionHV" cascade="all" inverse="true" lazy="true">
            <cache usage="read-write"/>
            <key column="HVA_CODAGH" foreign-key="RSC_HVAAGH_FK"/>
            <index column="HVA_ORDEN"/>
            <one-to-many class="org.ibit.rol.sac.model.HechoVitalAgrupacionHV"/>
        </list>

        <many-to-one name="foto" cascade="all" column="AGH_FOTO" foreign-key="RSC_AGHFOT_FK"/>
        <many-to-one name="icono" cascade="all" column="AGH_ICONO" foreign-key="RSC_AGHICO_FK"/>
        <many-to-one name="iconoGrande" cascade="all" column="AGH_ICOGRA" foreign-key="RSC_AGHICG_FK"/>


        <many-to-one name="publico" column="AGH_CODPOB" foreign-key="RSC_AGHPOB_FK"/>

        <map name="traducciones" cascade="all" table="RSC_TRAAGH">
            <cache usage="read-write"/>
            <key column="TRG_CODAGH" foreign-key="RSC_TRGAGH_FK"/>
            <index column="TRG_CODIDI" type="string" length="2"/>
            <composite-element class="org.ibit.rol.sac.model.TraduccionAgrupacionHV">
                <property name="nombre" length="256" column="TRG_NOMBRE"/>
                <property name="descripcion" length="4000" column="TRG_DESCRI"/>
                <property name="palabrasclave" length="4000" column="TRG_PALCLA"/>
            </composite-element>
        </map>
    </class>
    <query name="agrupacion.byname">
        <![CDATA[select agr from AgrupacionHechoVital as agr, trad in agr.traducciones where trad.nombre = :nombre]]>
    </query>
</hibernate-mapping>
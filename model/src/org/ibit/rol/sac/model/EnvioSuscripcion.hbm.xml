<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class name="org.ibit.rol.sac.model.EnvioSuscripcion" table="RSC_SCRENV">
        <cache usage="read-write"/>
        <id name="id" unsaved-value="null" column="SEN_COD">
            <generator class="sequence">
                <param name="sequence">RSC_SEQSEN</param>
            </generator>
        </id>
        
        <property name="fechaEnvio" column="SEN_FCENVIO"/>
        <property name="canalEnvio"  length="1" column="SEN_CANAL"/>        
        <property name="asunto"  length="500" column="SEN_ASUNTO"/>                
        <property name="titulo"  length="100" column="SEN_TITULO"/>                
        <property name="contenidoHtml" column="SEN_HTML" type="org.ibit.rol.sac.model.types.StringClobType" />
        <property name="tipo"  length="1" column="SEN_TIPO"/>                
        <property name="seccion"  column="SEN_IDSECC"/>                
        <property name="estado"  length="1" column="SEN_ESTADO"/>                
        <property name="fechaEnviado" column="SEN_FCENV"/>
        <property name="fechaAlta" column="SEN_FCALTA"/>
        <property name="usuarioAlta" column="SEN_UALTA"/>                
        <property name="fechaModificacion" column="SEN_FCMOD"/>
        <property name="usuarioModificacion" column="SEN_UMOD"/>                
        <property name="fechaBaja" column="SEN_FCBAJA"/>
        
        <many-to-one name="tipoSuscripcion" not-null="true" column="SEN_STPCOD" foreign-key="RSC_STPSENV_FK"/>                
        

		<set name="grupos" table="RSC_SENSGR">
		    <key column="SSC_CODSEN"/>
		    <many-to-many column="SSC_CODSGR" class="org.ibit.rol.sac.model.GrupoSuscripcion"/>
		</set>
		        
    </class>
</hibernate-mapping>